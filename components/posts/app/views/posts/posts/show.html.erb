<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<%- if @post.comments.any? %>
  <h3>Comments</h3>
  <ul>
    <% @post.comments.each do |comment| %>
      <li><%= comment.text %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'comment_form', post: @post %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
